<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egargan.recipebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".RecipeListActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RecipeViewActivity">

        </activity>

        <activity android:name=".NewRecipeActivity">
            
        </activity>

        <provider android:name="com.egargan.recipebook.provider.RecipeProvider"
            android:authorities="com.egargan.recipebook.provider.RecipeProvider"
            android:exported="false"> <!-- Other apps can't access this provider without permission -->

        </provider>

    </application>

</manifest>